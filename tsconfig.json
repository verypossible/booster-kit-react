{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "paths": {
      "*": [
        "src/universal/*",
        "src/client/*"
      ]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  },
  "files": [
    "./declarations.d.ts",
    "./src/**/*.d.ts"
  ],
  "include": [
    "./src/**/*",
    "./node_modules/redux-next/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
