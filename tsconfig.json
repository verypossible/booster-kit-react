{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "esnext.asynciterable",
      "ES2015",
      "Dom",
      "Dom.Iterable",
      "ScriptHost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build/",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
