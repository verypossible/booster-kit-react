{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build/",
    "paths": {
      "atoms/*": ["atoms/*"],
      "components/*": ["components/*"],
      "hoc/*": ["hoc/*"],
      "layouts/*": ["layouts/*"],
      "lib/*": ["lib/*"],
      "routes/*": ["routes/*"],
      "state/*": ["state/*"],
      "ui/*": ["ui/*"]
    },
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "removeComments": true,
    "skipLibCheck": true
  },
  "files": [
    "./declarations.d.ts",
    "./src/**/*.d.ts"
  ],
  "include": [
    "./src/**/*",
    "./node_modules/redux-next/*.d.ts",
    "./node_modules/apollo-client/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
